<?xml version="1.0" encoding="UTF-8" ?>

<!-- Job specification -->
<job name="psotest" xmlns:xi="http://www.w3.org/2001/XInclude">
	<definitions>
		<setting name="solution">0 0 0</setting>
	</definitions>

	<!-- Type of optimizer to use -->
	<optimizer name="pso">
		<setting name="populationSize">10</setting>
		<setting name="maxIterations">10</setting>

    <!-- Solution space stuff, to be stored in the database -->
    <xi:include xpointer="xpointer(//setting[@name='solution'])"/>
	</optimizer>

	<!-- Optimization parameter boundaries -->
	<boundaries>
		<boundary name="x" min="-100" max="100" />
		<boundary name="y" min="-100" max="100" />
		<boundary name="z" min="-100" max="100" />
	</boundaries>
	
	<parameters>
	  <parameter name="x" boundary="x"/>
	  <parameter name="y" boundary="y"/>
	  <parameter name="z" boundary="z"/>
	</parameters>
	
	<dispatcher name="psotest">
		<!-- Solution space stuff, supplied to the dispatcher -->
		<xi:include xpointer="xpointer(//setting[@name='solution'])"/>
	</dispatcher>
</job>
